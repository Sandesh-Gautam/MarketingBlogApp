@page
@model MarketingBlogApp.Pages.User.DeleteModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<style>
    :root {
        --color--teal-blue: #008080; /* Teal Blue */
        --color--darker-teal-blue: #004d4d; /* Darker Teal Blue */
        --color--dark: #333333; /* Dark Text Color */
        --color--white: #ffffff; /* White Background Color */
        --color--light-border: #d3d3d3; /* Light Border Color */
        --color--navbar-bg: #008080; /* Navbar Background Color */
        --color--navbar-text: #ffffff; /* Navbar Text Color */
    }

    body {
        background-color: var(--color--white);
        color: var(--color--dark);
        font-family: Arial, sans-serif;
    }

    h1 {
        color: var(--color--darker-teal-blue);
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    h3 {
        color: var(--color--darker-teal-blue);
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    h4 {
        color: var(--color--darker-teal-blue);
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin: 0;
    }

    .col-sm-2, .col-sm-10 {
        padding: 0.5rem;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .col-sm-10 {
        border-left: 1px solid var(--color--light-border);
    }

    dl {
        background-color: var(--color--white);
        border: 1px solid var(--color--light-border);
        border-radius: 0.25rem;
        padding: 1rem;
    }

    .btn-danger {
        background-color: #dc3545; /* Default Bootstrap Danger Color */
        border: none;
        color: var(--color--white);
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker Shade of Danger Color */
        }

    a {
        color: var(--color--teal-blue);
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    form {
        margin-top: 1rem;
    }
</style>

<h1>Delete Blog Post</h1>

<h3>Are you sure you want to delete this blog post?</h3>
<div>
    <h4>Blog Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.BlogPost.Title
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.BlogPost.Content
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="BlogPost.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
