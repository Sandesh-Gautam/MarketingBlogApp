@page
@model MarketingBlogApp.Pages.User.DeleteModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Delete Blog Post";
}

<style>
    .container {
        margin-top: 2rem;
    }

    h1 {
        margin-bottom: 1.5rem;
        font-size: 2rem;
        color: #007bff;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border-color: #ffeeba;
        padding: 1rem;
        border-radius: 0.25rem;
        margin-bottom: 1.5rem;
    }

    .alert-heading {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card {
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #343a40;
    }

    dl.row {
        margin-bottom: 1.5rem;
    }

    dt {
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #495057;
    }

    dd {
        margin-bottom: 1rem;
        color: #6c757d;
    }

    form {
        margin-top: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn {
        border-radius: 0.25rem;
        padding: 0.75rem 1.25rem;
        font-size: 1rem;
        cursor: pointer;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>

<div class="container">
    <h1>Delete Blog Post</h1>

    <div class="alert alert-warning" role="alert">
        <h3 class="alert-heading">Are you sure you want to delete this blog post?</h3>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Post Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    Title
                </dt>
                <dd class="col-sm-9">
                    @Model.BlogPost.Title
                </dd>
                <dt class="col-sm-3">
                    Content
                </dt>
                <dd class="col-sm-9">
                    @Model.BlogPost.Content
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="BlogPost.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
