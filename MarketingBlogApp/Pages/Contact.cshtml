@page
@model MarketingBlogApp.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Contact Us</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" asp-for="Contact.Name" required />
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" asp-for="Contact.Email" required />
                </div>
                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" asp-for="Contact.PhoneNumber" required />
                </div>
                <div class="mb-3">
                    <label for="Message" class="form-label">Message</label>
                    <textarea class="form-control" id="Message" name="Message" asp-for="Contact.Message" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            @if (Model.MessageSent)
            {
                <div class="alert alert-success mt-3">Your message has been sent.</div>
            }
        </div>
    </div>
</div>


<style>
    /* Additional custom styles for the Contact Us page */

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        background-color: #007bff; /* Primary color */
        color: #fff;
        font-weight: bold;
    }

    .card-body {
        background-color: #f8f9fa; /* Light background for the form */
        padding: 20px;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control:focus {
        border-color: #007bff; /* Primary color on focus */
        box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25); /* Focus shadow */
    }

    .btn-primary {
        background-color: #007bff; /* Primary button color */
        border-color: #007bff; /* Button border color */
    }

    .alert-success {
        background-color: #d4edda; /* Light green background */
        color: #155724; /* Dark green text */
        border-color: #c3e6cb; /* Border color */
    }
</style>