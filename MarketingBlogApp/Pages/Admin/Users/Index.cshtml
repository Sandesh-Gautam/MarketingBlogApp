@page
@model MarketingBlogApp.Pages.Admin.Users.IndexModel
@{
    Layout = "/Pages/Shared/_Admin.cshtml";
}

<h1>Manage Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            var roles = Model.UserRoles[user.Id];
            <tr class="@(user.IsDisabled ? "table-danger" : "")">
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@string.Join(", ", roles)</td>
                <td>
                    @if (roles.Any())
                    {
                        <a asp-page="./Edit" asp-route-id="@user.Id">Edit</a>
                        @if (!roles.Contains("Admin"))
                        {
                            <a asp-page="./Delete" asp-route-id="@user.Id">Delete</a>
                            @if (!user.IsDisabled)
                            {
                                <a asp-page="./Disabled" asp-route-id="@user.Id">Disable</a>
                            }
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
