@page
@model MarketingBlogApp.Pages.Admin.Users.CreateUsersModel
@{
    Layout = "/Pages/Shared/_Admin.cshtml";
}
<h2>Create User</h2>
<form method="post">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Input.FirstName">First Name</label>
        <input asp-for="Input.FirstName" class="form-control" placeholder="First Name">
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.LastName">Last Name</label>
        <input asp-for="Input.LastName" class="form-control" placeholder="Last Name">
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.UserName">User Name</label>
        <input asp-for="Input.UserName" class="form-control" placeholder="UserName">
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" class="form-control" placeholder="Email">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Address">Address</label>
        <input asp-for="Input.Address" class="form-control" placeholder="Address">
        <span asp-validation-for="Input.Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark btn-block">Register User</button>
</form>


<style>
    /* Custom CSS variables */
    :root {
        --color--white: #ffffff; /* Primary color - white */
        /* --color--beige: #b2ab9e; /* Secondary color - beige */
        --color--navy-blue: #000f55; /* Accent color - navy blue */
        --primary-color: #5bb6c7;
        --secondary-color: rgb(96, 179, 194);
        --text-color: #000;
        --link-color: #57b0b9;
        --border-radius: 10px;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: var(--color--white);
        color: var(--color--navy-blue);
        margin: 20px;
        padding: 20px;
    }

    h2 {
        text-align: center;
        color: var(--color--navy-blue);
        margin-top: 50px;
        margin-bottom: 30px;
    }

    form {
        max-width: 450px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #c8e6c9; /* Default border color */
        border-radius: var(--border-radius); /* Use border radius variable */
        background-color: var(--color--white);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        color: var(--color--navy-blue);
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #c8e6c9; /* Default border color */
        border-radius: 5px;
        background-color: var(--color--white);
        color: var(--color--navy-blue);
        box-sizing: border-box;
    }

    .text-danger {
        color: var(--color--navy-blue);
    }

    .btn-dark {
        background-color: var(--primary-color); /* Use primary color variable */
        color: var(--color--white); /* White text color */
        padding: 10px 20px;
        border: none;
        border-radius: var(--border-radius); /* Use border radius variable */
        cursor: pointer;
        font-weight: bold;
        display: block;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .btn-dark:hover {
            background-color: var(--link-color); /* Use link color variable on hover */
        }

</style>