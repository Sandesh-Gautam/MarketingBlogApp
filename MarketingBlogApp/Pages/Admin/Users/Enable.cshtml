@page "{id}"
@model MarketingBlogApp.Pages.Admin.Users.EnableModel
@{
    Layout = "/Pages/Shared/_Admin.cshtml";
}

<style>
    :root {
        --color--teal-blue: #6699CC; /* Primary teal/blue color */
        --color--darker-teal-blue: #357ca5; /* Darker teal/blue */
        --color--dark: #333333; /* Dark text color */
        --color--white: #ffffff; /* White background */
        --color--light-border: #e0e0e0; /* Light border color */
        --color--navbar-bg: #6699CC; /* Navbar background color */
        --color--navbar-text: #ffffff; /* Navbar text color */
    }

    body {
        background-color: var(--color--white); /* White background */
        color: var(--color--dark); /* Dark text color */
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: var(--color--darker-teal-blue); /* Darker teal/blue for headers */
        font-size: 2rem; /* Font size for headers */
        margin-bottom: 1.5rem; /* Spacing below header */
    }

    h3 {
        color: var(--color--darker-teal-blue); /* Darker teal/blue for sub-headers */
        font-size: 1.5rem; /* Font size for sub-headers */
        margin-bottom: 1rem; /* Spacing below sub-header */
    }

    .row {
        display: flex;
        justify-content: center; /* Center-align contents horizontally */
    }

    .col-md-6 {
        background-color: var(--color--white); /* White background */
        padding: 20px;
        border-radius: 5px; /* Rounded corners */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    form {
        margin-top: 1rem; /* Spacing above the form */
    }

    .form-floating input {
        background-color: var(--color--white); /* White background */
        border: 1px solid var(--color--teal-blue); /* Teal/blue border */
        color: var(--color--teal-blue); /* Teal/blue text color */
        border-radius: 5px; /* Rounded corners */
    }

    .form-floating label {
        color: var(--color--teal-blue); /* Teal/blue color for labels */
    }

    .form-floating input:focus {
        border-color: var(--color--teal-blue); /* Teal/blue border on focus */
        box-shadow: 0 0 0.25rem rgba(102, 153, 204, 0.25); /* Subtle teal/blue shadow */
    }

    .text-danger {
        color: #d32f2f; /* Red color for error messages */
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px; /* Rounded corners */
        cursor: pointer;
        text-decoration: none;
        color: var(--color--white); /* White text color */
        margin-top: 10px;
    }

    .btn-success {
        background-color: var(--color--teal-blue); /* Teal/blue background */
        border: none;
    }

        .btn-success:hover {
            background-color: var(--color--darker-teal-blue); /* Darker teal/blue on hover */
        }

    .btn-secondary {
        background-color: var(--color--light-border); /* Light border color */
        color: var(--color--dark); /* Dark text color */
        border: none;
    }
</style>

<h1>Enable User</h1>

<h3>Are you sure you want to enable this user?</h3>
<div class="row">
    <div class="col-md-6">
        <h4>@Model.User.UserName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                First Name
            </dt>
            <dd class="col-sm-10">
                @Model.User.FirstName
            </dd>
            <dt class="col-sm-2">
                Last Name
            </dt>
            <dd class="col-sm-10">
                @Model.User.LastName
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.User.Email
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="User.Id" />
            <button type="submit" class="btn btn-success">Enable</button>
            <a asp-page="./Disabled" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
