@page
@model LoginModel

@{
    Layout = "/Pages/Shared/_CustomLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 left-panel">
        <img src="/lib/images/pic.jpg" alt="BlogApp">
        <p>Need ideas for marketing, <h3>Marketing Blog</h3> is here to help.</p>
    </div>
    <div class="col-md-6 right-panel">
        <h1>Sign-In</h1>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Password</label>
                <input asp-for="Input.Password" class="form-control">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Input.RememberMe" class="form-check-input">
                <label class="form-check-label" asp-for="Input.RememberMe">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-dark align-self-center">Sign in</button>
        </form>

        <p class="text-center mt-3">OR</p>

        @foreach (var provider in Model.ExternalLogins!)
        {
            <form asp-page="./ExternalLogin" asp-route-provider="@provider.Name" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-inline">
                <button type="submit" class="btn btn-google align-self-center">
                    <img src="https://img.icons8.com/color/16/000000/google-logo.png" alt="Google logo"> Sign in with Google
                </button>
            </form>
        }

        <p class="text-center text-muted mt-3">Don't Have an account? <a asp-area="Identity" asp-page="/Account/Register">Signup Here</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
