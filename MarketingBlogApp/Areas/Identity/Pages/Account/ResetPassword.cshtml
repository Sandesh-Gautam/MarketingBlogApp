        padding: 20px;
    }

    h1, h2 {
        color: var(--color--teal-blue); /* Teal/Blue for headers */
        text-align: center;
    }

    hr {
        border-top: 2px solid var(--color--teal-blue); /* Teal/Blue for horizontal rule */
        width: 50%;
        margin: auto;
    }

    .row {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .col-md-4 {
        background-color: var(--color--white); /* White background for form container */
