@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<h1>Manage your account</h1>

<div>
    <h2>Change your account settings</h2>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}



<style>
    :root {
        --color-primary: #4a90e2; /* Teal/blue */
        --color-dark: #333; /* Dark text color */
        --color-white: #ffffff; /* White color */
        --color-border: #dddddd; /* Light border color */
        --color-header: #3a70b2; /* Darker teal/blue for headers */
        --color-section-header: #4a90e2; /* Teal/blue for section headers */
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: var(--color-white); /* White background */
        color: var(--color-dark); /* Dark text */
        margin: 0;
        padding: 0;
    }

    h1.page-header {
        text-align: center;
        color: var(--color-header); /* Darker teal/blue for headers */
        margin-top: 20px;
    }

    h2.section-header {
        text-align: center;
        color: var(--color-section-header); /* Teal/blue for section headers */
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .navbar {
        background-color: var(--color-white); /* White background */
        border-bottom: 2px solid var(--color-dark); /* Dark border */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Box shadow for navbar */
        padding: 5px 10px;
    }

    .navbar-brand, .nav-link {
        color: var(--color-primary); /* Teal/blue text */
    }

        .nav-link:hover {
            background-color: var(--color-primary); /* Teal/blue on hover */
            color: var(--color-white); /* White text on hover */
            border-radius: 10px; /* Rounded corners on hover */
            transition: background-color 0.3s, color 0.3s; /* Smooth transition */
        }

    .nav-container {
        background-color: var(--color-primary); /* Teal/blue background */
        padding: 20px;
        border-radius: 10px; /* Rounded corners */
        margin-bottom: 20px;
    }

        .nav-container .nav-link {
            color: var(--color-white); /* White text */
            margin-bottom: 10px;
        }

            .nav-container .nav-link:hover {
                background-color: #3a70b2; /* Darker teal/blue on hover */
                color: var(--color-white); /* White text on hover */
                border-radius: 10px; /* Rounded corners on hover */
                transition: background-color 0.3s, color 0.3s; /* Smooth transition */
            }

    .content-container {
        background-color: var(--color-white); /* White background */
        padding: 20px;
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

    form {
        background-color: var(--color-white); /* White background */
        padding: 20px;
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
        max-width: 400px;
        margin: 20px auto;
    }

        form label {
            display: block;
            margin-bottom: 7px;
            color: var(--color-dark); /* Dark text */
            text-align: left; /* Left-aligned labels */
        }

        form input[type="text"],
        form input[type="email"],
        form input[type="password"] {
            width: calc(100% - 24px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid var(--color-border); /* Light border */
            border-radius: 10px; /* Rounded corners */
            box-sizing: border-box;
        }

        form .btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: var(--color-primary); /* Button background color: teal/blue */
            color: var(--color-white); /* White text */
            border: none;
            border-radius: 10px; /* Rounded corners */
            text-align: center;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            form .btn:hover {
                background-color: #3a70b2; /* Darker teal/blue on hover */
            }
</style>

