@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>Put these codes in a safe place.</strong>
    </p>
    <p>
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </p>
    <p>
        Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
        used in an authenticator app you should <a asp-page="./ResetAuthenticator">reset your authenticator keys.</a>
    </p>
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">Generate Recovery Codes</button>
    </form>
</div>



<style>
    :root {
        --color--teal-blue: #008080; /* Teal/Blue color used as the primary color */
        --color--darker-teal-blue: #004d4d; /* Darker shade of teal/blue used for headers */
        --color--dark: #333; /* Dark text color */
        --color--white: #ffffff; /* Background color for the body and form elements */
        --color--light-border: #ccc; /* Light border color for form inputs */
        --color--button-dark: #333; /* Dark background for buttons */
    }

    body {
        background-color: var(--color--white); /* White background */
        color: var(--color--teal-blue); /* Teal/Blue text color */
        font-family: 'Arial', sans-serif;
        padding: 20px;
    }

    h3 {
        color: var(--color--darker-teal-blue); /* Darker teal/blue for headers */
        font-size: 2rem;
        margin-bottom: 20px;
    }

    p {
        color: var(--color--teal-blue); /* Teal/Blue text */
        font-size: 1.1rem;
    }

    a {
        color: var(--color--white); /* White for links */
        transition: color 0.3s;
    }

        a:hover {
            color: var(--color--teal-blue); /* Teal/Blue on hover for links */
        }

    .alert-warning {
        background-color: var(--color--white); /* White background for warning alerts */
        color: var(--color--teal-blue); /* Teal/Blue text for warning alerts */
        border: 1px solid var(--color--light-border); /* Light border */
        padding: 15px;
        border-radius: 5px;
    }

    .row {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .col-md-6 {
        background-color: var(--color--white); /* White background for the form container */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

    .form-floating {
        position: relative;
    }

        .form-floating input {
            background-color: var(--color--white); /* White for input fields */
            border: 1px solid var(--color--teal-blue); /* Teal/Blue border */
            color: var(--color--teal-blue); /* Teal/Blue text */
            border-radius: 4px;
        }

        .form-floating label {
            color: var(--color--teal-blue); /* Teal/Blue for labels */
        }

        .form-floating input:focus {
            border-color: var(--color--teal-blue); /* Teal/Blue border on focus */
            box-shadow: 0 0 5px rgba(0, 128, 128, 0.5); /* Teal/Blue shadow on focus */
        }

    .text-danger {
        color: #d32f2f; /* Red for error messages */
    }

    .btn-primary {
        background-color: var(--color--white); /* White button for primary actions */
        border-color: var(--color--white); /* White border */
        color: var(--color--teal-blue); /* Teal/Blue text */
        font-size: 1.1rem;
        padding: 10px;
        margin-top: 20px;
        width: 100%;
        transition: background-color 0.3s, border-color 0.3s, color 0.3s;
    }

        .btn-primary:hover {
            background-color: var(--color--teal-blue); /* Teal/Blue on hover */
            color: var(--color--white); /* White text on hover */
        }

    .btn-danger {
        background-color: var(--color--teal-blue); /* Teal/Blue button for danger actions */
        border-color: var(--color--teal-blue); /* Teal/Blue border */
        color: var(--color--white); /* White text */
        font-size: 1.1rem;
        padding: 10px;
        margin-top: 20px;
        width: 100%;
        transition: background-color 0.3s, border-color 0.3s, color 0.3s;
    }

        .btn-danger:hover {
            background-color: #004d4d; /* Darker teal/blue on hover */
            border-color: #004d4d; /* Darker teal/blue border on hover */
        }

    .btn-lg {
        font-size: 1.2rem;
        padding: 12px 24px;
    }
</style>