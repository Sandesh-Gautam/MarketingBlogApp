@page
@model ResetAuthenticatorModel
@{
    ViewData["Title"] = "Reset authenticator key";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>If you reset your authenticator key your authenticator app will not work until you reconfigure it.</strong>
    </p>
    <p>
        This process disables 2FA until you verify your authenticator app.
        If you do not complete your authenticator app configuration you may lose access to your account.
    </p>
</div>
<div>
    <form id="reset-authenticator-form" method="post">
        <button id="reset-authenticator-button" class="btn btn-danger" type="submit">Reset authenticator key</button>
    </form>
</div>




<style>
    :root {
        --color--teal-blue: #008080; /* Teal/Blue color used as the primary color */
        --color--darker-teal-blue: #005454; /* Darker shade of teal/blue used for headers */
        --color--dark: #333333; /* Dark text color */
        --color--white: #ffffff; /* Background color for the body and form elements */
        --color--light-border: #cccccc; /* Light border color for form inputs */
        --color--navbar-bg: #008080; /* Background color for the navbar */
        --color--navbar-text: #ffffff; /* Text color for navbar links */
    }

    body {
        background-color: var(--color--white); /* Background color for the body */
        color: var(--color--dark); /* Dark text color */
        font-family: 'Arial', sans-serif; /* Applies Arial font to all text */
        padding: 20px; /* Adds padding to the body */
    }

    h3 {
        color: var(--color--darker-teal-blue); /* Uses the darker teal/blue for headers */
        font-size: 2rem; /* Sets the font size for headers */
        margin-bottom: 20px; /* Adds space below the header */
    }

    .alert-warning {
        background-color: #fff3e0; /* Light orange background for warning */
        border-color: #ffe0b2; /* Border color for warning */
        color: #bf360c; /* Darker orange text for warning */
        margin-bottom: 20px; /* Adds margin at the bottom */
        padding: 15px; /* Adds padding */
        border-radius: 8px; /* Rounds the corners */
    }

        .alert-warning strong {
            color: #d32f2f; /* Red for strong emphasis inside warning */
        }

    .row {
        display: flex; /* Uses flexbox to center align its contents horizontally */
        justify-content: center; /* Centers the contents */
        margin-top: 20px; /* Adds margin at the top */
    }

    .col-md-6 {
        background-color: var(--color--white); /* Background color for the form container */
        padding: 20px; /* Adds padding */
        border-radius: 8px; /* Rounds the corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Adds box shadow */
    }

    .form-floating {
        position: relative; /* Sets relative positioning */
    }

        .form-floating input {
            background-color: var(--color--white); /* Background color for input fields */
            border: 1px solid var(--color--teal-blue); /* Border color for input fields */
            color: var(--color--teal-blue); /* Text color for input fields */
            border-radius: 4px; /* Rounds the corners */
        }

        .form-floating label {
            color: var(--color--teal-blue); /* Text color for labels */
        }

        .form-floating input:focus {
            border-color: var(--color--teal-blue); /* Border color on focus */
            box-shadow: 0 0 5px rgba(0, 128, 128, 0.5); /* Adds box shadow on focus */
        }

    .text-danger {
        color: #d32f2f; /* Red color for error messages */
    }

    .btn-primary {
        background-color: var(--color--teal-blue); /* Background color for primary buttons */
        border-color: var(--color--teal-blue); /* Border color for primary buttons */
        color: var(--color--white); /* Text color for primary buttons */
        font-size: 1.1rem; /* Font size for primary buttons */
        padding: 10px; /* Adds padding */
        margin-top: 20px; /* Adds margin at the top */
        width: 100%; /* Sets full width */
        transition: background-color 0.3s, border-color 0.3s; /* Adds transition */
    }

        .btn-primary:hover {
            background-color: var(--color--teal-blue); /* Background color on hover */
            border-color: var(--color--teal-blue); /* Border color on hover */
        }

    .btn-danger {
        background-color: var(--color--teal-blue); /* Background color for danger buttons */
        border-color: var(--color--teal-blue); /* Border color for danger buttons */
        color: var(--color--white); /* Text color for danger buttons */
        font-size: 1.2rem; /* Font size for danger buttons */
        padding: 10px 20px; /* Adds padding */
        margin-top: 10px; /* Adds margin at the top */
        transition: background-color 0.3s, border-color 0.3s; /* Adds transition */
    }

        .btn-danger:hover {
            background-color: var(--color--teal-blue); /* Background color on hover */
            border-color: var(--color--teal-blue); /* Border color on hover */
        }
</style>